{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Total constructor wins in the Malaysian Grand Prix (1999-2017).",
    "width": 700,
    "height": 400,
    "data": {"url": "data_cleaned/constructor_standings_malaysia.csv"},
    "transform": [
      {
        "aggregate": [
          {"op": "sum", "field": "wins", "as": "total_wins"}
        ],
        "groupby": ["name", "nationality"]
      },
      {"filter": "datum.total_wins > 0"}
    ],
    "mark": {"type": "bar", "tooltip": true},
    "encoding": {
      "x": {
        "field": "total_wins",
        "type": "quantitative",
        "title": "Total Wins in Malaysian GP (1999-2017)"
      },
      "y": {
        "field": "name",
        "type": "nominal",
        "title": "Constructor",
        "sort": "-x"
      },
      "color": {
        "field": "name",
        "type": "nominal",
        "title": "Constructor",
        "scale": {"scheme": "tableau10"}
        },
      "tooltip": [
        {"field": "name", "title": "Constructor"},
        {"field": "nationality", "title": "Country"},
        {"field": "total_wins", "title": "Total Wins"}
      ]
    },
    "config": {
      "axis": {"grid": false},
      "legend": {"orient": "bottom"},
      "mark": {"cornerRadius": 4}
    }
  }