{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Fastest lap speeds by year and driver at the Malaysian Grand Prix.",
  "width": 650,
  "height": 500,
  "data": {"url": "data_cleaned/fastest_lap_heatmap.csv"},
  "mark": {"type": "rect"},
  "encoding": {
    "x": {
      "field": "year",
      "type": "ordinal",
      "title": "Year",
      "axis": {"labelAngle": 0, "labelFontSize": 12}
    },
    "y": {
      "field": "fastestLapSpeed",
      "type": "quantitative",
      "title": "Fastest Lap Speed (km/h)",
      "axis": {"labelFontSize": 11}
    },
    "color": {
      "field": "fastestLapSpeed",
      "type": "quantitative",
      "title": "Fastest Lap Speed (km/h)",
      "scale": {"scheme": "inferno",
                "domain": [190, 230],
                "range": ["#2c7bb6", "#ffffbf", "#d7191c"]}
    },
    "tooltip": [
      {"field": "year"},
      {"field": "driver"},
      {"field": "constructor"},
      {"field": "fastestLapSpeed"}
    ]
  },
  "config": {
    "background": "black",
    "style": {"cell": {"stroke": "transparent"}},
    "axis": {
      "labelColor": "white",
      "titleColor": "white",
      "grid": false
    },
    "legend": {
      "labelColor": "white",
      "titleColor": "white"
    }
  }
}