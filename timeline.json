{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Top 3 finishers in the Malaysian Grand Prix (1999â€“2017) with fixed podium colors and hover interaction.",
    "width": 750,
    "height": 400,
    "data": {"url": "data_cleaned/top3_winners_malaysia.csv"},
    "params": [
      {
        "name": "hover",
        "select": {"type": "point", "on": "mouseover", "clear": "mouseout"}
      }
    ],
    "mark": {
      "type": "circle",
      "size": 200,
      "opacity": 0.9
    },
    "encoding": {
      "x": {
        "field": "year",
        "type": "ordinal",
        "title": "Year",
        "axis": {"labelAngle": 0}
      },
      "y": {
        "field": "positionOrder",
        "type": "ordinal",
        "title": "Finishing Position",
        "sort": ["1", "2", "3"]
      },
      "color": {
        "field": "positionOrder",
        "type": "ordinal",
        "title": "Podium Position",
        "scale": {
          "domain": ["1", "2", "3"],
          "range": ["#FFD700", "#C0C0C0", "#CD7F32"]
        },
        "legend": {"orient": "bottom", "columns": 3}
      },
      "opacity": {
        "condition": {"param": "hover", "value": 1},
        "value": 0.25
      },
      "tooltip": [
        {"field": "year", "title": "Year"},
        {"field": "positionOrder", "title": "Position"},
        {"field": "driver_name", "title": "Driver"},
        {"field": "nationality", "title": "Driver Nationality"},
        {"field": "name", "title": "Team"},
        {"field": "points", "title": "Points"},
        {"field": "fastestLapTime", "title": "Fastest Lap Time"}
      ]
    },
    "config": {
      "axis": {"grid": true, "labelFontSize": 12, "titleFontSize": 13},
      "legend": {"labelFontSize": 12, "titleFontSize": 13},
      "view": {"stroke": "transparent"}
    }
  }